//Merge Sort
//Tc->O(NlogN)

#include<iostream>

#include<vector>


using namespace std;

void merge( vector<int> &arr,int l,int mid, int r )
{
     int n1=mid-l+1;
     vector<int>a(n1);
     int n2=r-mid;
     vector<int>b(n2);
     for(int i=0;i<n1;i++)
     {
          a[i]=arr[l+i];
     }
     for(int i=0;i<n2;i++)
     {
          b[i]=arr[mid+i+1];
     }
     int i=0;
     int j=0;
     int k=l;

     while(i<n1 && j<n2)
     {
          if(a[i]<b[j])
          {
               arr[k]=a[i];
               i++;
          }
          else
          {
               arr[k]=b[j];
               j++;
          }
          k++;
     
     }
     while(i<n1)
     {
          arr[k]=a[i];
          i++;
          k++;
     }
     while(j<n2)
     {
          arr[k]=b[j];
          k++;
          j++;
     }
}
void mergesort(vector<int>&arr,int l,int r)
{
     if(r>l)
     {
           int mid=(l+r)/2;
          mergesort(arr,l,mid);
          mergesort(arr,mid+1,r);
          merge(arr,l,mid,r);

     }

}
int main()
{
     
     vector<int>arr;
     arr.push_back(30);
     arr.push_back(10);
     arr.push_back(20);
     arr.push_back(18);
     arr.push_back(27);
     int n=5;

     mergesort(arr,0,n-1);
     for(int i=0;i<n;i++)
     {
          cout<<arr[i]<< " ";
     }
     return 0;

}
